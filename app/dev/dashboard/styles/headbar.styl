@import 'variables.styl'

.headbar-container
	z-index 10
	position: absolute
	top 0
	left 0
	right 0
	background-color headbarBgColor
	box-shadow 0 1px 2px rgba(0,0,0,0.1)
	height headbarHeight

	.logo
		background-color logoBgColor
		border-right 1px solid #e9e9e9
		display inline-block
		height headbarHeight
		line-height headbarHeight
		position absolute
		text-align center
		width menuFullWidth

	.bar
		padding 0 0 0 menuFullWidth
		width 100%

		.bar-left
		.bar-right
			font-size 18px
			line-height 22px
			padding 0

			> li
				float left

				> a
				> .btn-group > a
					padding 14px 15px
					position relative
					height headbarHeight

				> .toggle-min
					display block

		.bar-left
			float left

			> li
				border-right 1px solid #e9e9e9





