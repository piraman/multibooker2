@import 'variables.styl'

.headbar-container
	position: absolute
	top 0
	left 0
	right 0
	height headbarHeight
	background-color headbarBgColor
	box-shadow 0 1px 2px rgba(0, 0, 0, 0.1)

	.logo
		display inline-block
		width menuWidth
		background-color logoBgColor
		position absolute
		height headbarHeight
		line-height headbarHeight
		text-align center
		border-right 1px solid #e9e9e9

	.bar
		padding 0 0 0 menuWidth
		width 100%

		.bar-left
		.bar-right
			font-size 18px
			line-height 22px
			padding 0

		.bar-left
			float left

			> li
				border-right 1px solid #e9e9e9
				float left

				> a
					padding 14px 15px
					position relative
					height 50px
					display block

				> .toggle-min
					display block

				> .search-box
					width 300px
					padding 8px 10px

			> li.nav-profile
				
				> a
					position relative
					display block
					height headbarHeight

		.bar-right
			
			> li
				
				> a
					position relative
					display block
					height 50px
					padding 10px 15px
















