@import 'variables.styl'

.menu-container
	z-index 11
	position absolute
	top headbarHeight
	bottom 0
	width menuFullWidth
	padding 0
	background-color menuBgColor
	left 0

	.menu-inner
		width 100%
		height 100%

		.menu
			margin 0
			padding 0

			> li
				position relative
				margin 0
				text-align left
				font-wight bold
				transition all 0.2s ease-in-out

				&:hover
					background-color #ccc

				> a
					position relative
					display block
					padding 15px
					transition all 0.2s ease-in-out
					font-size 13px
					color #767676

					> i
						display inline-block
						margin-right 10px
						width 20px
						line-height 1
						text-align center
						font-size 16px
						transition all 0.2s ease-in-out

		ul
			padding-left 0
			list-style none
